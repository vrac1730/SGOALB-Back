@model IEnumerable<SGOALB_BACK.Models.OrdenCompra>

@{
    ViewBag.Title = "Index";
}

<h2>Ordenes de Compra</h2>

<p>
    @Html.ActionLink("Registrar", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Usuario.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fecha_orden)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fecha_pago)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.monto_total)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.codigo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Usuario.nombre)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.fecha_orden)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fecha_pago)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.monto_total)
        </td>
        <td>
            @Html.ActionLink("Ver", "Details", new { id = item.id }) |
            @Html.ActionLink("Editar", "Edit", new { id = item.id }) @*|
            @Html.ActionLink("Eliminar", "Delete", new { id = item.id })*@
        </td>
    </tr>
}

</table>
