@model IEnumerable< SGOALB_BACK.Models.Producto>

@{
    ViewBag.Title = "Index";
}

<h2>Producto</h2>



@using (Html.BeginForm("Index", "Producto", FormMethod.Post))
{
    <div>
        <h5>Código de Producto</h5>
        @Html.TextBox("cod", "", new { @class = "form-control" })
        <h5>Nombre de Producto</h5>
        @Html.TextBox("cadena", "", new { @class = "form-control" })

        <button type="submit" class="btn-default">Buscar</button>

        @*@Html.DropDownList("id_categoria", null, "Seleccione Categoria")*@
    </div>
}
<hr />

<p>
    @Html.ActionLink("Registrar", "Create")
</p>

<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.marca)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.stock_min)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.stock_max)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Alerta.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Categoria.nombre)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.stock_min)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.stock_max)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alerta.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria.nombre)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                @Html.ActionLink("Visualizar", "Details", new { id = item.id }) 
            </td>
        </tr>
    }

</table>